<div class="cat_history_index_container">
  <h1><%= @user.nickname %>の保護ねこ応募者一覧ページ</h1>
  <div class="cat_history_index_box">
    <table>
      <thead>
        <tr>
          <th>応募者氏名</th>
          <th>応募者TEL</th>
          <th>応募者生年月日</th>
          <th>応募保護ねこ</th>
          <th>応募日時</th>
        </tr>
      </thead>
      <tbody>
        <% @user_cats.each do |cat| %>
          <% if cat.order.present? %>
            <tr>
              <td>
                <%= cat.order.order_name %>
              </td>
              <td>
                <%= cat.order.order_tel %>
              </td>
              <td>
                <%= cat.order.order_birth.strftime("%Y年%m月%d日") %>
              </td>
              <td>
                <%= cat.cat_name %>
              </td>
              <td>
                <%= cat.order.updated_at.in_time_zone('Tokyo')
                    .strftime("%Y年%m月%d日 %H時%M分") %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>