<div class="user_mypage_container">
  <% if current_user.admin? %>
    <h1><%= @user.nickname %>の管理者ページ</h1>
  <% else %>
    <h1><%= @user.nickname %>さまのマイページ</h1>
  <% end %>
  <nav>
    <ul>
      <% if current_user.admin %>
        <li>
          <%= link_to 'MyCatページ', my_cat_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'MyArticleページ', my_article_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'MyEventページ', my_event_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'MyPostページ', my_post_user_path(current_user) %>
        </li>
        <li>
          <%= link_to '保護ねこ登録', new_cat_path %>
        </li>
        <li>
          <%= link_to '記事登録', new_article_path %>
        </li>
        <li>
          <%= link_to 'イベント登録', new_event_path %>
        </li>
        <li>
          <%= link_to 'つぶやき投稿', new_post_path %>
        </li>
      <% else %>
        <li>
          <%= link_to 'MyPostページ', my_post_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'つぶやき投稿', new_post_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>