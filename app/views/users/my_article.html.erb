<div class="myarticle_index_container">
  <h1><%= @user.nickname %>さんのMyArticleページ</h1>
  <% if @articles.blank? %>
    <div class="no_myarticle_box">
      まだ<%= @user.nickname %>さんの記事はありません
    </div>
  <% else %>
    <div class="myarticles_index_box">
      <% @articles.each do |article| %>
        <div class="myarticle_index_box">
          <%= link_to article_path(article) do %>
            <div class="myarticle_index_img_box">
              <% if article.image.present? %>
                <%= attachment_image_tag article, :image, :fill, 200, 200, format: "jpg" %>
              <% else %>
                <%= image_tag '/images/article_img_sample.jpg', size: '200x200' %>
              <% end %>
            </div>
            <div class="myarticle_index_title_box">
              『<%= article.article_title %>』
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>